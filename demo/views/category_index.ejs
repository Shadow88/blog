<%include layout.ejs%>
<ol class="breadcrumb">
    <li><a href="/admin/category">分类首页</a></li>
    <li><span>分类列表</span></li>
</ol>
<h3>分类列表</h3>
<table class="table table-striped table-hover">
    <tr class="warning">
        <th>ID</th>
        <th>分类名称</th>
        <th>操作</th>
    </tr>
    <%  categories.map(item =>{ %>
<tr>
    <td><%= item._id %></td>
    <td><%= item.name %></td>
    <td>
        <a href="/admin/category/edit?id=<%= item._id%>">修改</a>
        <a href="/admin/category/delete?id=<%=item._id%>">删除</a>
    </td>

</tr>

   <% }) %>
</table>

<nav>
    <ul class="pager">
        <li class="previous"><a href="/admin/category?page= <%= page-1 %>"><span aria-hidden="true">&larr;</span> 上一页</a></li>
        <li>共<%= count %>条数据/当前<%= limit %>条,每页<%= pages %>条/共<%= page%>条</li>
        <li class="next"><a href="/admin/category?page= <%= page+1 %>">下一页 <span aria-hidden="true">&rarr;</span></a></li>
    </ul>
</nav>
